@model PhamMemThueXe.Models.Xe
@{ Layout = "_Layout"; ViewData["Title"] = "Thêm xe"; var loaiXes = ViewBag.LoaiXes as List<PhamMemThueXe.Models.LoaiXe>; }
<div class="row justify-content-center"><div class="col-md-6"><div class="card shadow"><div class="card-header bg-success text-white"><h3>Thêm xe</h3></div><div class="card-body"><form asp-action="CreateXe" method="post"><div asp-validation-summary="ModelOnly" class="text-danger"></div><div class="mb-3"><label asp-for="MaLoaiXe" class="form-label">Loại xe</label><select asp-for="MaLoaiXe" class="form-select"><option value="">-- Chọn loại xe --</option>@foreach (var lx in loaiXes ?? new List<PhamMemThueXe.Models.LoaiXe>()){<option value="@lx.MaLoaiXe">@lx.TenLoaiXe</option>}</select><span asp-validation-for="MaLoaiXe" class="text-danger"></span></div><div class="mb-3"><label asp-for="BienSoXe" class="form-label">Biển số xe</label><input asp-for="BienSoXe" class="form-control" /><span asp-validation-for="BienSoXe" class="text-danger"></span></div><div class="mb-3"><label asp-for="TenXe" class="form-label">Tên xe</label><input asp-for="TenXe" class="form-control" /><span asp-validation-for="TenXe" class="text-danger"></span></div><div class="mb-3"><label asp-for="TrangThai" class="form-label">Trạng thái</label><select asp-for="TrangThai" class="form-select"><option>Sẵn sàng</option><option>Đang cho thuê</option><option>Bảo trì</option></select></div><div class="d-grid gap-2"><button type="submit" class="btn btn-success">Lưu</button><a asp-action="Xes" class="btn btn-secondary">Hủy</a></div></form></div></div></div></div>
@section Scripts{@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}
