@model PhamMemThueXe.Models.BangGia
@{ Layout = "_Layout"; ViewData["Title"] = "Thêm bảng giá"; var loaiXes = ViewBag.LoaiXes as List<PhamMemThueXe.Models.LoaiXe>; }
<div class="row justify-content-center"><div class="col-md-6"><div class="card shadow"><div class="card-header bg-success text-white"><h3>Thêm bảng giá</h3></div><div class="card-body"><form asp-action="CreateBangGia" method="post"><div asp-validation-summary="ModelOnly" class="text-danger"></div><div class="mb-3"><label asp-for="MaLoaiXe" class="form-label">Loại xe</label><select asp-for="MaLoaiXe" class="form-select"><option value="">-- Chọn --</option>@foreach (var lx in loaiXes ?? new List<PhamMemThueXe.Models.LoaiXe>()){<option value="@lx.MaLoaiXe">@lx.TenLoaiXe</option>}</select><span asp-validation-for="MaLoaiXe" class="text-danger"></span></div><div class="mb-3"><label asp-for="DonGiaTheoNgay" class="form-label">Đơn giá theo ngày (VNĐ)</label><input asp-for="DonGiaTheoNgay" class="form-control" type="number" step="1000" /><span asp-validation-for="DonGiaTheoNgay" class="text-danger"></span></div><div class="mb-3"><label asp-for="NgayApDung" class="form-label">Ngày áp dụng</label><input asp-for="NgayApDung" class="form-control" type="date" /><span asp-validation-for="NgayApDung" class="text-danger"></span></div><div class="d-grid gap-2"><button type="submit" class="btn btn-success">Lưu</button><a asp-action="BangGias" class="btn btn-secondary">Hủy</a></div></form></div></div></div></div>
@section Scripts{@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}
