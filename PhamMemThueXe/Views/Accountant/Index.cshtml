@{
    Layout = "_Layout";
    ViewData["Title"] = "Kế toán";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="fas fa-briefcase"></i> Quản lý kế toán</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card bg-primary text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-calendar-check fa-3x mb-3"></i>
                <h5>Quản lý phiếu đặt xe</h5>
                <a asp-action="PhieuDatXes" class="btn btn-light btn-sm mt-2">
                    <i class="fas fa-arrow-right"></i> Xem chi tiết
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-3">
        <div class="card bg-success text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-file-contract fa-3x mb-3"></i>
                <h5>Quản lý hợp đồng</h5>
                <a asp-action="HopDongs" class="btn btn-light btn-sm mt-2">
                    <i class="fas fa-arrow-right"></i> Xem chi tiết
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-3">
        <div class="card bg-info text-white h-100">
            <div class="card-body text-center">
                <i class="fas fa-receipt fa-3x mb-3"></i>
                <h5>Quản lý hóa đơn</h5>
                <a asp-action="HoaDons" class="btn btn-light btn-sm mt-2">
                    <i class="fas fa-arrow-right"></i> Xem chi tiết
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-3">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x mb-3"></i>
                <h5>Quản lý khách hàng</h5>
                <a asp-action="KhachHangs" class="btn btn-dark btn-sm mt-2">
                    <i class="fas fa-arrow-right"></i> Xem chi tiết
                </a>
            </div>
        </div>
    </div>
</div>
