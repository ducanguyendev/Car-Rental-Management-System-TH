@{ Layout = "_Layout"; ViewData["Title"] = "Hợp đồng của tôi"; }
<div class="mb-4"><h2><i class="fas fa-file-contract"></i> Hợp đồng của tôi</h2></div>
<div id="alertContainer"></div>
<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Mã</th>
                    <th>Ngày lập</th>
                    <th>Ngày nhận</th>
                    <th>Ngày trả</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody id="hopDongTableBody">
                <tr>
                    <td colspan="6" class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Đang tải...</span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
@section Scripts {
<script>
    const API_BASE = window.location.origin;
    async function getCurrentUser() {
        const res = await fetch(`${API_BASE}/api/AuthApi/me`, { credentials: 'include' });
        if (!res.ok) return null;
        const r = await res.json();
        return r.data || null;
    }
    function getStatusBadge(status) {
        if(status === "Đã hoàn thành") return '<span class="badge bg-success">Đã hoàn thành</span>';
        if(status === "Đã huỷ") return '<span class="badge bg-danger">Đã huỷ</span>';
        return '<span class="badge bg-warning text-dark">'+(status||'Đang thuê')+'</span>';
    }
    function formatDate(date) { if(!date) return ''; return new Date(date).toLocaleDateString('vi-VN'); }
    function formatCurrency(amount) { return Number(amount).toLocaleString('vi-VN'); }
    function showAlert(msg, type='danger') {
        document.getElementById('alertContainer').innerHTML = `<div class="alert alert-${type}">${msg}</div>`;
    }
    async function loadHopDongs() {
        const user = await getCurrentUser();
        if (!user || !user.maKH) {
            showAlert('Không xác định được thông tin khách hàng hoặc chưa đăng nhập!', 'danger');
            document.getElementById('hopDongTableBody').innerHTML = '';
            return;
        }
        try {
            const res = await fetch(`${API_BASE}/api/HopDongApi/by-customer/${user.maKH}`, { credentials: 'include' });
            if (!res.ok) {
                const errorResult = await res.json().catch(() => null);
                throw new Error(errorResult?.message || 'Kết nối API thất bại');
            }
            const result = await res.json();
            if(result.success) {
                const data = result.data;
                if (data.length === 0) {
                    document.getElementById('hopDongTableBody').innerHTML = '<tr><td colspan="6" class="text-center">Chưa có hợp đồng nào</td></tr>';
                } else {
                    document.getElementById('hopDongTableBody').innerHTML = data.map(item => `
                        <tr>
                            <td>#${item.maHopDong}</td>
                            <td>${formatDate(item.ngayLap)}</td>
                            <td>${formatDate(item.ngayNhanXe)}</td>
                            <td>${formatDate(item.ngayTraXe)}</td>
                            <td>${formatCurrency(item.tongTien)} VNĐ</td>
                            <td>${getStatusBadge(item.trangThai)}</td>
                        </tr>
                    `).join('');
                }
            } else {
                showAlert(result.message || 'Lỗi tải danh sách hợp đồng!', 'danger');
                document.getElementById('hopDongTableBody').innerHTML = '';
            }
        } catch(e) {
            console.error('Lỗi tải hợp đồng:', e);
            showAlert('Không thể tải thông tin hợp đồng! ' + (e.message || ''), 'danger');
            document.getElementById('hopDongTableBody').innerHTML = '';
        }
    }
    loadHopDongs();
</script>
}
